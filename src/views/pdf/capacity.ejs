        <br/>
        <br/>

        <div>
          <P  class="list_item">Notes</P>
          <textarea class="textarea"></textarea>
        </div>
      </div>

      <!-- cycle 2 -->
      <div class="data-container">
        <div class="cycle">
          <span class="cycle-text gradient">Cycle 2</span>
        </div>

        <br/>

        <div>
